<!DOCTYPE html>
<html>
<head>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;1,600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/home.css">
  <title>Blog</title>
</head>
<body>
  <h1>Blog Posts</h1>
  <nav class="navbar">
    <img src="images/logo.png" class="logo" alt="">
    <ul class="links-container">
        <li class="link-item"><a href="/" class="link">home</a></li>
        <li class="link-item"><a href="/editor" class="link">editor</a></li>
    </ul>
  </nav>

  <header class="header">
    <div class="content">
        <h1 class="heading">
            <span class="small">welcome in the world of</span>
            blog
            <span class="no-fill">writing</span>
        </h1>
        <a href="/new" class="btn">Create New Post</a>
    </div>
  </header>

  <section class="blogs-section">
    <% posts.forEach(post => { %>
      <div class="card">
        <img src="<%= post.imageUrl %>" alt="Blog Image" class="blog-image">
        <h2><%= post.title %></h2>
        <p class="blog-overview"><%= post.content.substring(0, 100) %>...</p>
        <a href="/posts/<%= post.id %>" class="btn dark">Read More</a>
      </div>
    <% }) %>
  </section>

</body>
</html>
